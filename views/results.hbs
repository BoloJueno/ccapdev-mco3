{{> header}}

<!-- searched-container shows what was the user searching for -->
<div id="searched-container"> Results for <span style="font-weight: bold;">"{{enteredQuery}}"</span> </div> 
<hr>

<!-- Start of results. results-container is used per user -->
{{#if data.length}}
    {{#each data}}
        <div class="results-container">
            <div class="prof-pic-container">
                <div class="image-crop">
                    <img src="{{this.img}}"/>
                </div>
            </div>
        <!-- insert href below -->
            <a class="results-name" href="/profile/{{this.id}}">{{this.firstName}} {{this.lastName}}</a>
            <div class="results-id" id="showIDno">ID #{{this.IDno}}</div>
            <div class="results-bio">{{this.bio}}</div>
        </div>
    {{/each}}
{{else}}
    <div class="results-container"><h3>No results found!</h3></div>
    
{{/if}}
